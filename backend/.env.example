# Configurações do Backend PokeAPI App
# Copie este arquivo para .env e ajuste as configurações

# Ambiente
DEBUG=True

# Database
DATABASE_URL=sqlite:///./pokemon_app.db

# Segurança
SECRET_KEY=your-secret-key-change-in-production

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (separados por vírgula)
CORS_ORIGINS=http://localhost:4200,http://localhost:8100,http://127.0.0.1:4200,http://127.0.0.1:8100,https://poke-dexqogvyl-david-assefs-projects.vercel.app

# PokeAPI
POKEAPI_BASE_URL=https://pokeapi.co/api/v2

# Pull Sync Configuration
PULL_SYNC_INTERVAL_MINUTES=5
CLIENT_TIMEOUT_SECONDS=30
