# Configuração para evitar conflitos entre sistemas de sincronização
# Este arquivo define as configurações para garantir operação em modo pull-only

# Sistema de Sincronização
SYNC_MODE=pull-only
STRICT_MODE=true
DEBUG_MODE=true

# URLs e Portas
CLIENT_SERVER_URL=http://localhost:3001
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8100

# Configurações do Cliente HTTP
CLIENT_PORT=3001
CLIENT_HEALTH_CHECK_INTERVAL=30000

# Configurações do Backend Pull
PULL_SYNC_INTERVAL=30
PULL_SYNC_TIMEOUT=15
PULL_SYNC_CLEANUP_INTERVAL=3600

# Configurações de Segurança
ENABLE_DUPLICATE_DETECTION=true
DUPLICATE_DETECTION_WINDOW=5000

# Configurações de Log
LOG_LEVEL=info
LOG_SYNC_OPERATIONS=true
LOG_DUPLICATE_DETECTION=true

# Configurações de Teste
TEST_MODE=false
MOCK_BACKEND_RESPONSES=false
