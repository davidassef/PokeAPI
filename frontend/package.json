{
  "name": "pokeapiapp-frontend",
  "version": "1.5.0",
  "author": "David Assef",
  "homepage": "https://github.com/davidassef/PokeAPI",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "start:dev": "ng serve --proxy-config proxy.conf.json",
    "start:frontend": "ng serve --proxy-config proxy.conf.json",
    "start:client-server": "node client-server.js",
    "start:frontend-only": "ng serve --proxy-config proxy.conf.json",
    "build": "ng build",
    "build:prod": "ng build --configuration production && echo '/*    /index.html   200' > www/_redirects && cp src/404.html www/404.html",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:backend": "node scripts/test-backend-connection.js",
    "e2e:playwright": "playwright test",
    "e2e:playwright:ui": "playwright test --ui",
    "e2e:playwright:headed": "playwright test --headed",
    "e2e:playwright:debug": "playwright test --debug",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.12",
    "@angular/common": "^17.3.12",
    "@angular/compiler": "^17.3.12",
    "@angular/core": "^17.3.12",
    "@angular/forms": "^17.3.12",
    "@angular/platform-browser": "^17.3.12",
    "@angular/platform-browser-dynamic": "^17.3.12",
    "@angular/router": "^17.3.12",
    "@capacitor/app": "7.0.1",
    "@capacitor/core": "7.4.0",
    "@capacitor/haptics": "7.0.1",
    "@capacitor/keyboard": "7.0.1",
    "@capacitor/status-bar": "7.0.1",
    "@ionic/angular": "^7.8.6",
    "@ionic/storage-angular": "^4.0.0",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "ionicons": "^7.0.0",
    "node-fetch": "^3.3.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.17",
    "@angular-eslint/builder": "^19.0.0",
    "@angular-eslint/eslint-plugin": "^19.0.0",
    "@angular-eslint/eslint-plugin-template": "^19.0.0",
    "@angular-eslint/schematics": "^19.0.0",
    "@angular-eslint/template-parser": "^19.0.0",
    "@angular/cli": "^17.3.17",
    "@angular/compiler-cli": "^17.3.12",
    "@angular/language-service": "^17.3.12",
    "@capacitor/cli": "7.4.0",
    "@ionic/angular-toolkit": "^11.0.1",
    "@playwright/test": "^1.54.1",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.16.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.1",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "glob": "^11.0.3",
    "jasmine-core": "~5.1.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
