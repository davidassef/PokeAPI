{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üöÄ Start Frontend (Ionic)",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "options": {
                "cwd": "${workspaceFolder}/pokeapp"
            },
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "group": "development"
            },
            "problemMatcher": {
                "owner": "ionic",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+)\\s+-\\s+(warning|error)\\s+-\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Local:.*$",
                    "endsPattern": "^.*bundle generation complete.*$"
                }
            }
        },
        {
            "label": "üñ•Ô∏è Start Backend (FastAPI)",
            "type": "shell",
            "command": "uvicorn",
            "args": ["main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "group": "development"
            },
            "problemMatcher": {
                "owner": "fastapi",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+)\\s+-\\s+(warning|error)\\s+-\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Started server process.*$",
                    "endsPattern": "^.*Uvicorn running on.*$"
                }
            }
        },
        {
            "label": "üèóÔ∏è Build Frontend",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "options": {
                "cwd": "${workspaceFolder}/pokeapp"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "label": "üß™ Test Frontend",
            "type": "shell",
            "command": "npm",
            "args": ["test"],
            "options": {
                "cwd": "${workspaceFolder}/pokeapp"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üß™ Test Backend",
            "type": "shell",
            "command": "pytest",
            "args": ["-v"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üì± Sync Capacitor",
            "type": "shell",
            "command": "npx",
            "args": ["cap", "sync"],
            "options": {
                "cwd": "${workspaceFolder}/pokeapp"
            },
            "group": "build",
            "dependsOn": "üèóÔ∏è Build Frontend",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üì± Run iOS",
            "type": "shell",
            "command": "npx",
            "args": ["cap", "run", "ios"],
            "options": {
                "cwd": "${workspaceFolder}/pokeapp"
            },
            "group": "build",
            "dependsOn": "üì± Sync Capacitor",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üì± Run Android",
            "type": "shell",
            "command": "npx",
            "args": ["cap", "run", "android"],
            "options": {
                "cwd": "${workspaceFolder}/pokeapp"
            },
            "group": "build",
            "dependsOn": "üì± Sync Capacitor",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üîß Install Frontend Dependencies",
            "type": "shell",
            "command": "npm",
            "args": ["install"],
            "options": {
                "cwd": "${workspaceFolder}/pokeapp"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üîß Install Backend Dependencies",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "requirements.txt"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üöÄ Start Full Stack",
            "dependsOrder": "parallel",
            "dependsOn": [
                "üöÄ Start Frontend (Ionic)",
                "üñ•Ô∏è Start Backend (FastAPI)"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "group": "development"
            }
        },
        {
            "label": "üßπ Clean All",
            "type": "shell",
            "command": "echo",
            "args": ["'Cleaning project...'"],
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "üßπ Clean Frontend",
                "üßπ Clean Backend"
            ]
        },
        {
            "label": "üßπ Clean Frontend",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "node_modules", "dist", ".angular"],
            "options": {
                "cwd": "${workspaceFolder}/pokeapp"
            },
            "group": "build"
        },
        {
            "label": "üßπ Clean Backend",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "__pycache__", "*.pyc", "*.db"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build"
        }
    ]
}